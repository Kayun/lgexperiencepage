extends ../layouts/default

block head
	- pageTitle = 'LG Ultra';
	- classWidth = 'main_width_1260'

block content
	nav.menu-mini

		a.menu-mini__item.menu-mini__item_state_active(href="ultra.html")
			.menu-mini__logo.menu-mini__logo_type_ultra

		a.menu-mini__item(href="oled.html")
			.menu-mini__logo.menu-mini__logo_type_oled

		a.menu-mini__item(href="webos.html")
			.menu-mini__logo.menu-mini__logo_type_webos

		a.menu-mini__home(href="main.html")

	section.banner.banner_type_ultra(role="banner")

		img.banner__img.js-banner-img(src="assets/images/ultra/ultra-bg.jpg")
		.banner__info.js-banner-info
			.banner__logo.banner__logo_state_hide.js-banner-logo

			h1.banner__title.banner__title_state_hide.js-banner-title(role="heading")
				span Ультрачеткость,
				br
				span в каждой детали

			.banner__text.banner__text_state_hide.js-banner-text
				span ULTRA HD 4K
				br
				span 8.3 млн пикселей

			.banner__btn.banner__btn_state_hide.js-banner-btn
				| Посмотрите видео

		!= "<!--[if !IE]>-->"
			.banner__video.js-banner-video#bannerPlayerUltra(data-video-id="W9vgYbH8Jcg")
		!= "<!--<![endif]-->"

		!= "<!--[if lte IE 8]>"
			#bannerPlayerUltra

			script.

				var params = {
					allowScriptAccess: "always",
					wmode: "opaque"
				};
				var atts = { id: "bannerPlayer" };
				swfobject.embedSWF(
					"http://www.youtube.com/v/W9vgYbH8Jcg?enablejsapi=1&playerapiid=bannerPlayer&version=3",
					"bannerPlayerUltra", "1260", "442", "8", null, null, params, atts);

		!= "<![endif]-->"

	section.features

		.wrapper.clearfix

			.features__item.features__item_pos_left

				.features__item-icon.features__item-icon_type_ultra-4k

				.features__item-text
					| Качество изображения
					br
					| в 4 раза лучше чем Full HD

			.features__item

				.features__item-icon.features__item-icon_type_ang

				.features__item-text
					| Идеальная картинка
					br
					| при любых углах обзора

			.features__item.features__item_pos_right.features__item_pl_116

				.features__item-icon.features__item-icon_type_colorprime

				.features__item-text
					| Невероятно живые
					br
					| и яркие цвета

	section.video.video_pt_51

		.wrapper.clearfix

			.video__item.js-video-switch.js-video-first(data-video-id="W9vgYbH8Jcg")
				.video__clip
					img.video__img(src="assets/images/ultra/content/video-1.jpg")
					.video__play

				.video__text
					| LG ULTRA HD ТВ реклама 1

			.video__item.js-video-switch(data-video-id="fLWHCVV_r1E")
				.video__clip
					img.video__img(src="assets/images/ultra/content/video-2.jpg")
					.video__play

				.video__text
					| Филипп Блум о телевизоре LG&nbsp;ULTRA&nbsp;HD&nbsp;4K

			.video__item.js-video-switch(data-video-id="3uXhcIsi4y0")
				.video__clip
					img.video__img(src="assets/images/ultra/content/video-3.jpg")
					.video__play

				.video__text
					| LG ULTRA HD ТВ реклама 2

			.video__item.js-video-switch(data-video-id="ZbCLL7Wo7WY")
				.video__clip
					img.video__img(src="assets/images/ultra/content/video-4.jpg")
					.video__play

				.video__text
					| Ultra HD реальность. А что бы вы сделали, если бы наступил
					| конец света?

	.wrapper

		include ../blocks/ultra/colorprime
		include ../blocks/ultra/color
		include ../blocks/ultra/ultra-hd
		include ../blocks/ultra/ultra-3d
		include ../blocks/ultra/ips
		section.stream.stream_type_ultra.clearfix
			.stream-wrap

				h2.title(role="heading") Смотрите 4K-видео через&nbsp;интернет

				p.text
					| Популярные видеосервисы Okko и ivi.ru запустили на телевизорах
					| LG стриминг 4K-фильмов через интернет. Это стало возможным благодаря
					| мощной аппаратной начинке LG и поддержке новейшего кодека HEVC.
					| Ваш телевизор уже готов к переходу онлайн-кинотеатров на
					| требовательный формат ULTRA HD 4K.

			.stream__img
			.stream__logo

	include ../blocks/ultra/sound
	- var classMod = "setup_type_ultra";
	section.setup#setupSection(class= classMod ? classMod : "")

		.wrapper.clearfix

			.setup-wrap

				h2.title(role="heading" class= titleMod ? titleMod : "")
					| Широкие возможности webOS

				p.text
					| WebOS содержит сотни приложений, тысячи фильмов и&nbsp;дает доступ к
					| другому контенту. Дружелюбный интерфейс webOS будет понятен даже
					| новичкам без опыта использования Smart TV.

				p.text

					| Многозадачный режим позволяет работать одновременно с несколькими
					| приложениями, раскрывая и сворачивая их по мере надобности.
					| А чтобы не потеряться в общем изобилии, к вашим услугам есть
					| специальный сервис, подбирающий рекомендованный контент из интернета
					| и локальных ресурсов.

		.setup__img

		.setup__container.js-setup-cont
			.setup__block
			.setup__block
			.setup__block
			.setup__block
			.setup__block
			.setup__block
			.setup__block

			.setup__point.js-setup-point

	section.compare

		.wrapper

			.compare__feat
				.button-feat
					span.button-feat_tt_up Сравните основные характеристики
					br
					span телевизоров LG

			h2.compare__title
				span Выбери свой
				br
				span.compare__title_color_red 4K ULTRA HD
				= " "
				span телевизор

			.compare-container

				+model({
					img: "assets/images/ultra/content/img-2.jpg",
					icons: [
						"4k-3d-mini",
						"webos-mini",
						"dvb-t2-mini",
						"ips-4k-mini",
						"harman-mini"
					],
					text: "Флагманский 4K 3D ULTRA HD телевизор 2014 года с функцией Smart TV на новой платформе webOS",
					num: "65UB980V",
					mrg: 8,
				})

				+model({
					img: "assets/images/ultra/content/img-2.jpg",
					icons: [
						"4k-3d-mini",
						"webos-mini",
						"dvb-t2-mini",
						"ips-4k-mini",
						"harman-mini"
					],
					text: "Флагманский 4K 3D ULTRA HD телевизор 2014 года с функцией Smart TV на новой платформе webOS",
					num: "79UB980V",
					mrg: 8,
				})

				+model({
					img: "assets/images/ultra/content/img-3.jpg",
					icons: [
						"4k-3d-mini",
						"webos-mini",
						"dvb-t2-mini",
						"ips-mini",
						"wifi-mini"
					],
					text: "Флагманский 4K 3D ULTRA HD телевизор 2014 года с функцией Smart TV на новой платформе webOS",
					num: "84UB980V",
					mrg: 8,
				})

				+model({
					img: "assets/images/ultra/content/img-4.jpg",
					icons: [
						"4k-3d-mini",
						"webos-mini",
						"dvb-t2-mini",
						"colorprime-mini",
						"harman-mini"
					],
					text: "Ультрачёткость в каждой детали",
					num: "UF950V",
					mrg: 8,
				})

block scriptAfter

	+scripts([
		"vendor.js",
		"common.js",
		"banner.js",
		"ultra.js"
	])

block scriptBefore

	script.

		var scripts = [
			'https://www.youtube.com/iframe_api',
			'assets/scripts/swfobject.js'
		];

		for (var index = 0; index < scripts.length; index++) {
			var script = document.createElement('script'),
				beforeScript = document.getElementsByTagName('head')[0];
			script.type = "text/javascript";
			script.src = scripts[index];
			beforeScript.appendChild(script);
		}

])

