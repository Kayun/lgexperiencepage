include ../common/var
include ../common/mixin

doctype html
html(lang='ru')
	include ../partials/head
	body

		block link

		link(href="assets/styles/common.css" rel="stylesheet")

		// для отладки, перед релизом убрать

		link(href="assets/styles/lg.min.css" rel="stylesheet")
		link(href="assets/styles/fonts.css" rel="stylesheet")

		block scriptBefore

		+ei("lte IE 8") <link href="assets/styles/ie8.css" rel="stylesheet">
		+ei("IE 7") <link href="assets/styles/ie7.css" rel="stylesheet">

		+ei("lt IE 9") <script>document.createElement('header');document.createElement('nav');document.createElement('section');document.createElement('article');document.createElement('aside');document.createElement('footer');</script>

		include ../partials/header
		.main(class=classWidth ? classWidth : "")
			block content
		include ../partials/footer

		block scriptAfter

